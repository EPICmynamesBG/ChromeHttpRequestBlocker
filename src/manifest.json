{
    "manifest_version": 2,
    "name": "HTTP Request Blocker",
    "short_name": "HTTPRequestBlocker",
    "version": "1.0",
    "description": "This extension blocks HTTP Request based on configurable URL patterns.",
    "author": "Cristian Lupa»ôcu",
    "homepage_url": "https://github.com/clupascu/ChromeHttpRequestBlocker",

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*",
        "storage"
    ],
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "background": {
        "persistent": true,
        "scripts": ["src/background.js"]
    },
    "options_ui": {
      "page" : "options.html",
      "chrome_style": true
    }
}
